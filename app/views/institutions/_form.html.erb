<%= simple_form_for(@institution) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :item, collection: @items,  label_method: :first, value_method: :last, input_html: { class: 'chosen-select',  data: { placeholder: "Selecione uma item" } } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
